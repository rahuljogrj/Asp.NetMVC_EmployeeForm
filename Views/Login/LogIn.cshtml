

@model WebApplication3.Models.LogInModel


@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@section script{
    <script src="~/js/Login/jsLogin.js"></script>
    <script>
        // Function to change and display the selected section
        function changeSection(sectionId) {
            // Hide all sections first
            var sections = document.querySelectorAll('.section');
            sections.forEach(function (section) {
                section.style.display = 'none';
                section.classList.remove('active'); // Remove the active class to hide the section

            });

            // Show the selected section
            var selectedSection = document.getElementById(sectionId);
            selectedSection.style.display = 'block';
            selectedSection.classList.add('active'); // Add the active class to display the section

        }
    </script>
}

 
